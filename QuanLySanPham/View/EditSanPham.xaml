<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuanLySanPham.View.EditSanPham"
             Title="Sửa thông tin sản phẩm"
             xmlns:viewmodel="clr-namespace:QuanLySanPham.ViewModel"
             x:DataType="viewmodel:EditSanPhamViewModel">

    <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto"
          RowSpacing="20">
        <Label Grid.Row="0" Text="Mã sản phẩm" FontAttributes="Bold"/>
        <Entry Grid.Row="1" Text="{Binding Sanpham.MaSanPham}" IsReadOnly="True" Placeholder="Nhập mã sản phẩm"/>
        <Label Grid.Row="2" Text="Nhập tên sản phẩm" FontAttributes="Bold"/>
        <Entry Grid.Row="3" Text="{Binding Sanpham.Ten}" Placeholder="Nhập tên sản phẩm"/>
        <Label Grid.Row="4" Text="Nhập đơn giá" FontAttributes="Bold"/>
        <Entry Grid.Row="5" Text="{Binding Sanpham.GiaTien}" Placeholder="Nhập đơn giá"/>
        <Label Grid.Row="6" Text="Nhập số lượng" FontAttributes="Bold"/>
        <Entry Grid.Row="7" Text="{Binding Sanpham.SoLuong}" Placeholder="Nhập số lượng"/>

        <Grid Grid.Row="8"
              ColumnDefinitions="*, Auto, Auto, *"
              ColumnSpacing="20">
            <Button Text="Lưu"
                    Command="{Binding SaveCommand}"
                    Grid.Column="1"
                    BackgroundColor="Green"/>
            <Button Text="Hủy"
                    Command="{Binding CancelCommand}"
                    Grid.Column="2"
                    BackgroundColor="Red"/>
        </Grid>
    </Grid>

</ContentPage>