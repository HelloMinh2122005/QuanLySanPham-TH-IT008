<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuanLySanPham.View.DanhSachSP"
             Title="{Binding Title}"
             xmlns:viewmodel="clr-namespace:QuanLySanPham.ViewModel"
             x:DataType="viewmodel:DanhSachSPViewModel"
             xmlns:model="clr-namespace:QuanLySanPham.Model">

    <VerticalStackLayout Spacing="20">

        <Label
            Text="Danh sách sản phẩm"
            Style="{StaticResource Headline}"
            SemanticProperties.HeadingLevel="Level1"
            HorizontalOptions="Center" />

        <Grid 
            Padding="20"
          RowSpacing="10"
          RowDefinitions="Auto, *, Auto, Auto">

        <Grid ColumnDefinitions="*, *, *, *, *"
              ColumnSpacing="10">
            <Label Grid.Column="0" Text="Mã sản phẩm" FontAttributes="Bold"/>
            <Label Grid.Column="1" Text="Tên sản phẩm" FontAttributes="Bold"/>
            <Label Grid.Column="2" Text="Đơn giá" FontAttributes="Bold" HorizontalOptions="Center"/>
            <Label Grid.Column="3" Text="Số lượng" FontAttributes="Bold" HorizontalOptions="Center"/>
            <Label Grid.Column="4" Text="Thành tiền" FontAttributes="Bold" HorizontalOptions="Center"/>
        </Grid>

        <CollectionView Grid.Row="1"
                        SelectionMode="Single"
                        SelectionChangedCommand="{Binding SelectCommand}"
                        SelectionChangedCommandParameter="{Binding Source={RelativeSource Self}, Path=SelectedItem}"
                        ItemsSource="{Binding DsSanPham}"
                        HeightRequest="300">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                        <Grid ColumnDefinitions="*, *, *, *, *"
                          ColumnSpacing="10"
                          x:DataType="model:SanPham">
                        <Label Grid.Column="0" Text="{Binding MaSanPham}"/>
                        <Label Grid.Column="1" Text="{Binding Ten}" />
                        <Label Grid.Column="2" Text="{Binding GiaTien}" HorizontalOptions="Center"/>
                        <Label Grid.Column="3" Text="{Binding SoLuong}" HorizontalOptions="Center"/>
                        <Label Grid.Column="4" Text="{Binding TongTien}" HorizontalOptions="Center"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Grid Grid.Row="2"
              ColumnDefinitions="200, *">
            <Label Text="Thành tiền: " FontAttributes="Bold" FontSize="20"/>
            <Label Grid.Column="1" Text="{Binding ThanhTien}" FontSize="20"/>
        </Grid>
        
        <Grid Grid.Row="3"
              ColumnDefinitions="*, Auto, Auto, Auto, *"
              RowDefinitions="Auto, Auto"
              ColumnSpacing="10"
              RowSpacing="10">

            <Button Text="Thêm"
                    Command="{Binding AddCommand}"
                    Grid.Column="1"
                    BackgroundColor="Green"
                    HorizontalOptions="Center"/>
            <Button Text="Xóa"
                    Command="{Binding DelCommand}"
                    Grid.Column="2"
                    BackgroundColor="Red"
                    HorizontalOptions="Center"/>
            <Button Text="Sửa"
                    Command="{Binding EditCommand}"
                    Grid.Column="3"
                    BackgroundColor="Blue"
                    HorizontalOptions="Center"/>
            <Button Grid.Row="4"
                    Grid.Column="2"
                    BackgroundColor="LightGray"
                    TextColor="Black"
                    Text="Xuất PDF"
                    WidthRequest="100"
                    Command="{Binding ExportCommand}"/>
            
            </Grid>

            
        </Grid>
        
    </VerticalStackLayout>
</ContentPage>